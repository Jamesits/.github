{
    "$schema": "https://docs.renovatebot.com/renovate-schema.json",
    "extends": [
        "config:recommended"
    ],
    "lockFileMaintenance": {
        "enabled": true
    },
    "separateMajorMinor": true,
    "separateMinorPatch": false,
    "separateMultipleMajor": true,
    "separateMultipleMinor": false,
    "cloneSubmodules": true,
    "git-submodules": {
        "enabled": true
    },
    "configMigration": true,
    "configWarningReuseIssue": false,
    "osvVulnerabilityAlerts": true,
    "prHourlyLimit": 0,
    "prConcurrentLimit": 0,
    "timezone": "Asia/Shanghai",
    "schedule": [
        "* 2-8 * * *"
    ],
    "updateNotScheduled": false,
    "assigneesFromCodeOwners": true,
    "labels": [
        "renovate:default"
    ],
    "vulnerabilityAlerts": {
        "enabled": true,
        "labels": [
            "renovate:security"
        ],
        "vulnerabilityFixStrategy": "lowest"
    },
    "postUpdateOptions": [
        "gomodMassage",
        "gomodTidyE",
        "gomodUpdateImportPaths",
        "helmUpdateSubChartArchives",
        "npmDedupe",
        "pnpmDedupe",
        "yarnDedupeHighest"
    ],
    "customManagers": [
        {
            "customType": "regex",
            "description": "Manually tagged packages",
            "managerFilePatterns": [
                "/.*/"
            ],
            "matchStrings": [
                "(?:#|\\/\\/) +renovate: +datasource=\"?(?<datasource>[a-z-]+?)\"?(?: +depName=\"?(?<depName>\\S+?)\"?)? +packageName=\"?(?<packageName>\\S+?)\"?(?: +versioning=\"?(?<versioning>[a-z-]+?)\"?)?[\\n\\r](?:.*\\S*\\s*=)?\\s*[\"']?(?<currentValue>[\\w.]+)[\"']?"
            ]
        }
    ]
}
